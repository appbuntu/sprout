commands:
  install:
    - composer install
    - npm install
    - grunt build
  watch:
    - grunt %args%
  vendor:
    - composer %args%
  wp:
    - wp ssh --host=vagrant %args%
  backup:
    - mkdir -p backup
    - wp ssh --host=vagrant db export backup/$(date +'%Y-%m-%d-%H-%M-%S').sql
  dist:
    - tar -zcvf dist.tar.gz .
