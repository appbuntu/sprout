{
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "type": "webroot",
        "version": "4.2.2",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/4.2.2.zip"
        },
        "require" : {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    },
    {
      "type": "git",
      "url": "git@github.com:ezekg/theme-juice-core.git"
    },
    {
      "type": "git",
      "url": "git@github.com:ezekg/theme-juice-functions.git"
    },
    {
      "type": "git",
      "url": "git@github.com:ezekg/theme-juice-shortcodes.git"
    },
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "vlucas/phpdotenv": "~1.1",
    "composer/installers": ">=1.0.0",
    "fancyguy/webroot-installer": "1.1.0",
    "wordpress/wordpress": "*",
    "theme-juice/theme-juice-core": "~0.3",
    "theme-juice/theme-juice-functions": "~0.2",
    "theme-juice/theme-juice-shortcodes": "~0.2",
    "wpackagist-plugin/wordpress-importer": "*",
    "wpackagist-plugin/regenerate-thumbnails": "*",
    "wpackagist-plugin/custom-post-type-ui": "*",
    "wpackagist-plugin/google-analytics-for-wordpress": "*",
    "wpackagist-plugin/wordpress-seo": "*"
  },
  "require-dev": {
    "x-team/wp-cli-ssh": "dev-master"
  },
  "extra": {
    "webroot-dir": "wp",
    "webroot-package": "wordpress/wordpress",
    "installer-paths": {
      "app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "app/plugins/{$name}/": ["type:wordpress-plugin"],
      "app/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}
